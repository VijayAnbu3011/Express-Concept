<form class="container" method="POST" action="/products/edit-product">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">ID</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" 
    name="_id" value={{selectedProduct._id}}>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Product Name</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name="pName"
     value={{selectedProduct.pName}}>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Product Price</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name="pPrice"
     value={{selectedProduct.pPrice}}>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Product Description</label>
    <input type="text" class="form-control" id="exampleInputPassword1" name="pDesc"
    value={{selectedProduct.pDesc}}>
  </div>
 
  <button type="submit" class="btn btn-primary">Edit Product</button>
</form>